
<div id="Ace_WholeBody">
	<br>

	<form action="/item/saveEditedItem/{{item.id}} ?_method=PUT" method="post">
		<table id="Ace_itemTable">
			<tr><td>	<label id="Ace_HeaderADD_Edit">Edit of Item name: {{item.itemName}} by {{item.username}}</label></td></tr>
			<tr>
				<td><label>Item Name :</label></td>
				<td><input type="text" id="itemName" name="itemName" placeholder="Input name of item" required
						value={{item.itemName}}>
				</td>
				<td>
					<input type="file" id="posterUpload" name="posterUpload"
						accept="image/png,image/jpeg,image/jpg,image/gif">
					<div class="font-weight-bold text-danger small" id="posterErr" style="display:none"></div>
				</td>
			</tr>

			<tr>
				<td>
					<label>Item Price:</label>
				</td>
				<td>
					<input type="number" id="itemPrice" step="any" name="itemPrice" min="0.5" max="500" required
						value={{item.itemPrice}}>
				</td>
				<td rowspan="2">
					<img id="poster" src="{{ item.posterURL}}" alt="" class="border img-thumbnail img-fluid"
						style="height:250px;width:250px">
					<input id="posterURL" type="hidden" name="posterURL" value="{{item.posterURL}}">
				</td>
			</tr>

			<tr>
				<td>
					<label>Item Description :</label>
				</td>
				<td>
					<textarea id="itemDescription" name="itemDescription" rows="5"
						placeholder="Input Description of item" required>{{ item.itemDescription}}</textarea>
				</td>

			</tr>
			<tr>
				<td>

		 <label for="Quantity">Quantity :</label>
				
					
					
				</td>
				<td> 
				<input  type="number" name="Quantity" id="Quantity"	min= "0" max ="100"value={{ item.Quantity}} required>
					
			
					
				<label id="Ace_ChangeToGray" for="Quantity">Roughly how many you can sell </label>
				</td>
				<td>

				</td>


			</tr>

			<tr>
				<td>

				</td>
				<td>
					<div class="form-check form-check-inline">

						<input class="form-check-input" type="radio" name="Halaltype" id="Halal" value="Halal"
							{{ radioCheck item.Halaltype 'Halal'}}>

						<label class="form-check-label" for="Halal">Halal</label>

					</div>
					<div class="form-check form-check-inline">
						<input class="form-check-input" type="radio" name="Halaltype" id="non-Halal" value="non-Halal"
							{{radioCheck item.Halaltype 'non-Halal'}}>
						<label class="form-check-label" for="non-Halal">non-Halal</label>
					</div>
				</td>
				<td>
					<label>&nbsp;&nbsp;&nbsp;</label>
					<input class="form-check-input" type="checkbox" name="Vegtype" id="Veg" value="Veg" {{ item.vegi}}>
					<label class="form-check-label" for="Veg">Veg</label>



				</td>
			</tr>
			<tr>
				<td><label>Cuisine :</label></td>
				<td>
					<div class="form-check form-check-inline">

						<input class="form-check-input" type="radio" name="Cuisine" id="Chinese" value="Chinese"
								{{radioCheck item.Cuisine 'Chinese'}}>

						<label class="form-check-label" for="Chinese">Chinese</label>

					</div>
					<div class="form-check form-check-inline">
						<input class="form-check-input" type="radio" name="Cuisine" id="Malay" value="Malay" 
									{{radioCheck item.Cuisine 'Malay'}}>
						<label class="form-check-label" for="Malay">Malay</label>
					</div>
					<div class="form-check form-check-inline">

						<input class="form-check-input" type="radio" name="Cuisine" id="Indian" value="Indian"
									{{radioCheck item.Cuisine 'Indian'}}>

						<label class="form-check-label" for="Indian">Indian</label>

					</div>
					<div class="form-check form-check-inline">
						<input class="form-check-input" type="radio" name="Cuisine" id="Western" value="Western"
									{{radioCheck item.Cuisine 'Western'}}>
						<label class="form-check-label" for="Western">Western</label>
					</div>
					<div class="form-check form-check-inline">

						<input class="form-check-input" type="radio" name="Cuisine" id="Japanese" value="Japanese"
									{{radioCheck item.Cuisine 'Japanese'}}>

						<label class="form-check-label" for="Japanese">Japanese</label>

					</div>
					<div class="form-check form-check-inline">
						<input class="form-check-input" type="radio" name="Cuisine" id="Korean" value="Korean"
									{{radioCheck item.Cuisine 'Korean'}}>
						<label class="form-check-label" for="Korean">Korean</label>
					</div>

				</td>

			</tr>
			<tr>
				<td><label>Days food available :</label></td>
				<td>
					<div class="form-check form-check-inline">
						<input class="form-check-input" type="checkbox" name="DaysAvailable" id="Monday" value="Monday"
							{{ item.dayMonday}} onclick="ensureOneCheck('DaysAvailable', 'DaysErr', 'Ace_itemCreate')">
						<label class="form-check-label" for="Monday">Monday</label>
					</div>

					<div class="form-check form-check-inline">
						<input class="form-check-input" type="checkbox" name="DaysAvailable" id="Tueday" value="Tueday"
							{{ item.dayTuesday}} onclick="ensureOneCheck('DaysAvailable', 'DaysErr', 'Ace_itemCreate')">
						<label class="form-check-label" for="Tueday">Tueday</label>
					</div>

					<div class="form-check form-check-inline">
						<input class="form-check-input" type="checkbox" name="DaysAvailable" id="Wednesday"
							value="Wednesday" {{ item.dayWednesday}}
							onclick="ensureOneCheck('DaysAvailable', 'DaysErr', 'Ace_itemCreate')">
						<label class="form-check-label" for="Wednesday">Wednesday</label>
					</div>

					<div class="form-check form-check-inline">
						<input class="form-check-input" type="checkbox" name="DaysAvailable" id="Thursday"
							value="Thursday" {{ item.dayThursday}}
							onclick="ensureOneCheck('DaysAvailable', 'DaysErr', 'Ace_itemCreate')">
						<label class="form-check-label" for="Thursday">Thursday</label>
					</div>

					<div class="form-check form-check-inline">
						<input class="form-check-input" type="checkbox" name="DaysAvailable" id="Friday" value="Friday"
							{{ item.dayFriday}} onclick="ensureOneCheck('DaysAvailable', 'DaysErr', 'Ace_itemCreate')">
						<label class="form-check-label" for="Friday">Friday</label>
					</div>

					<div class="form-check form-check-inline">
						<input class="form-check-input" type="checkbox" name="DaysAvailable" id="Saturday"
							value="Saturday" {{ item.daySaturday}}
							onclick="ensureOneCheck('DaysAvailable', 'DaysErr', 'Ace_itemCreate')">
						<label class="form-check-label" for="Saturday">Saturday</label>
					</div>

					<div class="form-check form-check-inline">
						<input class="form-check-input" type="checkbox" name="DaysAvailable" id="Sunday" value="Sunday"
							{{ item.daySunday}} onclick="ensureOneCheck('DaysAvailable', 'DaysErr', 'Ace_itemCreate')">
						<label class="form-check-label" for="Sunday">Sunday</label>
					</div>
					<p class="font-weight-bold text-info" id="DaysErr" style="display:none">
						Please select one of the days
					</p>

				</td>
			</tr>
			<tr>
				<td><label>Time food available :</label></td>
	<td>
	<div class="form-check form-check-inline">
						<input class="form-check-input" type="checkbox" name="timeAvailable" id="morning"
							value="morning" onclick="ensureOneCheck('timeAvailable', 'TimeErr', 'Ace_itemCreate')" {{ item.morning}}>
						<label class="form-check-label" for="morning">morning(9am-11am)</label>
					</div>

					<div class="form-check form-check-inline">
						<input class="form-check-input" type="checkbox" name="timeAvailable" id="afternoon" value="Friday"
							onclick="ensureOneCheck('timeAvailable', 'TimeErr', 'Ace_itemCreate')" {{ item.afternoon}}>
						<label class="form-check-label" for="afternoon">afternoon(1pm-3pm)</label>
					</div>

					<div class="form-check form-check-inline">
						<input class="form-check-input" type="checkbox" name="timeAvailable" id="evening"
							value="evening" onclick="ensureOneCheck('timeAvailable', 'TimeErr', 'Ace_itemCreate')" {{ item.evening}}>
						<label class="form-check-label" for="evening">evening(5pm-8pm)</label>
					</div>

					
					<p class="font-weight-bold text-info" id="TimeErr" style="display:none">
						Please select one of the time slot
					</p>
				</td>
			</tr>
			<tr>
				<td><label>Location to meet up:</label></td>
			</tr>
			<tr>
				<td></td>

				<td>
					<ul>
						<li>
							<input class="form-check-input" type="checkbox" name="LocationD" id="North" value="North"
								onclick="ensureOneCheck('LocationD', 'LocationErr', 'Ace_itemCreate')"
								{{item.NorthLO }}>
							<label class="form-check-label" for="North">North</label></li>
						<li> <input class="form-check-input" type="checkbox" name="LocationD" id="Central"
								value="Central" onclick="ensureOneCheck('LocationD', 'LocationErr', 'Ace_itemCreate')"
								{{item.CentralLO }}>

							<label class="form-check-label" for="Central">Central</label></li>
						<li> <input class="form-check-input" type="checkbox" name="LocationD" id="East" value="East"
								onclick="ensureOneCheck('LocationD', 'LocationErr', 'Ace_itemCreate')" {{item.EastLO }}>

							<label class="form-check-label" for="East">East</label></li>
						<li> <input class="form-check-input" type="checkbox" name="LocationD" id="West" value="West"
								onclick="ensureOneCheck('LocationD', 'LocationErr', 'Ace_itemCreate')" {{item.WestLO }}>

							<label class="form-check-label" for="West">West</label></li>

						<p class="font-weight-bold text-info" id="LocationErr" style="display:none">
							Please select one of the location
						</p>
					</ul>
				</td>
			</tr>

			<tr>
				<td></td>
				<td></td>
				<td><button id="Ace_itemCreate" type="submit"
						onclick="ensureOneCheck('DaysAvailable', 'DaysErr', 'Ace_itemCreate')" )>Edit Item</button></td>

			</tr>
			<tr>

		</table>
	</form>
	<br>
	<br>
</div>