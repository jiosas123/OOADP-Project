			</tr>

			<tr>
				<td></td>
				<td></td>
				<td><button id="Ace_itemCreate" type="submit"
						onclick="ensureOneCheck('DaysAvailable', 'DaysErr', 'Ace_itemCreate')" )>Create Item</button>
				</td>

			</tr>
			<tr>

		</table>
	</form>
